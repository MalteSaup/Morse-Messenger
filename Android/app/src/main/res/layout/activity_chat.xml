<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatActivity"
        android:background="@color/colorPrimary">

    <TextView
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/nameDisplay"
            android:paddingTop="8dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorTextW"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:text="Jane Doeg" android:textSize="16sp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/chatBox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/sendButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameDisplay">
    </android.support.v7.widget.RecyclerView>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textInput"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/sendButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorTextW"/>
    <Button
            android:text="@string/sendMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/sendButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:background="@drawable/buttonshape" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textColor="@color/colorTextW"/>
</android.support.constraint.ConstraintLayout>